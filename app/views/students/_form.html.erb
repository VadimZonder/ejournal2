    <%= f.label :year_of_birth %><br>
    <%= f.number_field :year_of_birth %>
  </div>
  <div class="field">
    <%= f.label :school %><br>
    <%= f.text_field :school %>
  </div>
  <div class="field">
    <%= f.label :email,"Student's Email" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :comment,"General Comment (Optional)" %><br>
    <%= f.text_field :comment %>
  </div>
