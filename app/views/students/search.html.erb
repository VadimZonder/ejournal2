<h2>You searched for <%= @search_term %> </h2>


<% if @students.length ==0 %>

<br>

<p>No products match what you are looking for. </p>

<% end %>

<table class="catalog">

<% @students.each do |student| %>

<tr>
    <td>
                <div class="title">
        <%= link_to student.name, student %>
        </div>
        
        <div class="description">
            <%= student.comment %>
            
        </div>    
        
        </td>
</tr>
<% end %>


</table>
