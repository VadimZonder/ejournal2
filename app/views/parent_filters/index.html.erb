<p id="notice"><%= notice %></p>

<h1>Listing Parent Filters</h1>

<table>
  <thead>
    <tr>
      <th>Filter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parent_filters.each do |parent_filter| %>
      <tr>
        <td><%= parent_filter.filter %></td>
        <td><%= link_to 'Show', parent_filter %></td>
        <td><%= link_to 'Edit', edit_parent_filter_path(parent_filter) %></td>
        <td><%= link_to 'Destroy', parent_filter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

