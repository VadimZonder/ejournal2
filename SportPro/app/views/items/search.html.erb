<h2>You searched for <%= @search_term %> </h2>


<% if @items.length ==0 %>

<br>

<p>No products match what you are looking for. </p>

<% end %> 

<table class="catalog"> 

<% @items.each do |item| %>

<tr>
    <td>
        <div class="image">
            
             <%= link_to (image_tag item.image_url, :style => "height:100px;"), item %>
            
        </div>
        <div class="title">
        <%= link_to item.title, item %>
        </div>
        
        <div class="description">
            <%= item.description %>
            
        </div>    
        
        <div class="price">
            
            <%= number_to_currency(item.price, :unit => 'â‚¬') %>
        </div>
        
        <a href="/cart/<%= item.id %>">Add o cart</a>
    </td>
</tr>
<% end %>


</table>
